{
  "name": "vs-git-away",
  "displayName": "vs-git-away",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "vs-git-away-sidebar": [
        {
          "id": "vs-git-away-explorer",
          "name": "Git除外ファイル一覧",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vs-git-away-sidebar",
          "title": "Git除外管理",
          "icon": "./images/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "vs-git-away.refreshExplorer",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "vs-git-away.showCurrentBranch",
        "title": "現在のブランチを表示"
      },
      {
        "command": "vs-git-away.showChangedFiles",
        "title": "変更されたファイルを表示"
      },
      {
        "command": "vs-git-away.createBranch",
        "title": "新しいブランチを作成"
      },
      {
        "command": "vs-git-away.switchBranch",
        "title": "ブランチを切り替え"
      },
      {
        "command": "vs-git-away.openSettings",
        "title": "設定を開く"
      },
      {
        "command": "vs-git-away.excludeFromGit",
        "title": "git管理から外す"
      },
      {
        "command": "vs-git-away.removeFromExclude",
        "title": "除外リストから削除"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vs-git-away.refreshExplorer",
          "when": "view == vs-git-away-explorer",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "vs-git-away.excludeFromGit",
          "when": "!explorerResourceIsFolder",
          "group": "gitaway@1"
        }
      ],
      "view/item/context": [
        {
          "command": "vs-git-away.removeFromExclude",
          "when": "view == vs-git-away-explorer && viewItem == excludedFile",
          "group": "gitaway@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}